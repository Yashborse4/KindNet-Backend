{
  "name": "cyberbullying-detection-system",
  "version": "1.0.0",
  "description": "AI-powered cyberbullying detection system with React frontend and Flask backend",
  "main": "index.js",
  "scripts": {
    "install:frontend": "cd Frontend && npm install",
    "install:backend": "cd Backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "start:frontend": "cd Frontend && npm start",
    "start:backend": "cd Backend && python app.py",
    "start:backend:dev": "cd Backend && python -m flask run --debug",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:dev": "concurrently \"npm run start:backend:dev\" \"npm run start:frontend\"",
    "build:frontend": "cd Frontend && npm run build",
    "test:frontend": "cd Frontend && npm test",
    "test:backend": "cd Backend && python -m pytest",
    "lint:frontend": "cd Frontend && npm run lint",
    "setup": "npm run install:all && echo Setup complete! Run 'npm start' to launch the application."
  },
  "keywords": [
    "cyberbullying",
    "detection",
    "ai",
    "react",
    "flask",
    "machine-learning",
    "safety",
    "chat"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cyberbullying-detection.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  }
}
